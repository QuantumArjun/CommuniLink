<!DOCTYPE html>
<html>
<link rel="stylesheet" href="style.css"/>
<div id="myDIV" class="header">
    <h2>Fundraiser Votes</h2>
    <form action="/insert" method="post">

    <h1> $20401 </h1>

    <input type="text" id="title" placeholder="Enter your suggestion here" name="title">




    <input type="text" id="date" placeholder="MM/DD/YYYY" name="date">

    <input type="text" id="cost" placeholder="Cost..." name="cost">

    <span> <button  class ="addBtn" type="submit">Add</button></span>
    </form>
</div>

<section class="get">
    <span> <a href = "/get-data" id = "a"  type="submit">Update Changes</a></span>
    <div>
        {{# each items }}
            <article class="item">
                <div>Title: {{ this.title }}</div>
                <div>Cost: ${{ this.cost }}</div>
                <div>Date: {{ this.date }}</div>
                <div>ID: {{ this._id }}</div>
                <form action="/delete" method="post">
                    <div class="input">
                        <label for="id">ID</label>
                        <input type="text" id="id" name="id">
                    </div>
                    <button type="submit">DELETE</button>
                </form>
            </article>
        {{/each}}
    </div>
</section>
